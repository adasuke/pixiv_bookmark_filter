{
  "manifest_version": 3,
  "name": "Pixiv Bookmark Filter",
  "version": "1.0.0",
  "description": "Pixivの一覧ページから指定ブックマーク数以下の作品を非表示にする",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://www.pixiv.net/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "content_scripts": [
    {
      "matches": ["https://www.pixiv.net/tags/*/novels*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
